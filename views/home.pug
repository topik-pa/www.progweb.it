      include ./post/015-javascript-throttle-debounce-definizione-esempi/preview.pug
      
      include ./post/014-progettazione-software-sviluppo-evoluzionistico/preview.pug

      include ./post/013-html-attributo-loading-lazy-load/preview.pug

      include ./post/012-css-variabili-sintassi-esempi/preview.pug

      include ./post/011-javascript-promise-definizione-sintassi-esempi/preview.pug

      include ./post/010-javascript-generator-definizione-esempi/preview.pug

      include ./post/009-security-by-design-principi/preview.pug

      include ./analisi/confronto-portali-ecommerce-moda-italiani/confronto-portali-ecommerce-moda-italiani-preview.pug

      include ./post/javascript-html-tabella-dinamica/javascript-html-tabella-dinamica-step2-preview.pug

      include ./post/programmazione-strutturata-oggetti-funzionale/programmazione-strutturata-oggetti-funzionale-article-preview.pug

